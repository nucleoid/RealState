<h1>Images</h1>
<div class="pull-right"><%= link_to 'Back', property_path(@property) %> | <%= link_to 'New Image', new_property_image_path(@property) %></div><br>

<% if @images.empty? %>
  <h5>No Images added yet</h5>
<% else %>
  <div class="row">
    <div class="col-sm-6">Url</div>
    <div class="col-sm-1">Is featured</div>
    <div class="col-sm-3">Image</div>
    <div class="col-sm-2"></div>
  </div>
<% end %>


<% @images.each do |image| %>
  <div class="row">
    <div class="col-sm-6"><%= truncate image.url, {length: 65} %></div>
    <div class="col-sm-1"><%= image.is_featured %></div>
    <div class="col-sm-3"><%= image_tag image.url, {height: '150'} %></div>
    <div class="col-sm-2"><%= link_to 'Show', property_image_path(@property, image) %> | <%= link_to 'Edit', edit_property_image_path(@property, image) %> | <%= link_to 'Destroy', [@property, image], method: :delete, data: { confirm: 'Are you sure?' } %></div>
  </div>
<% end %>

