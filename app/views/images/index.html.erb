<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Is featured</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.url %></td>
        <td><%= image.is_featured %></td>
        <td><%= image_tag @image.url %></td>
        <td><%= link_to 'Show', property_image_path(@property, image) %></td>
        <td><%= link_to 'Edit', edit_property_image_path(@property, image) %></td>
        <td><%= link_to 'Destroy', [@property, image], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_property_image_path(@property) %>
