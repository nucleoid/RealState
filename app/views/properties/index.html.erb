<p id="notice"><%= notice %></p>

<h1>Properties</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>Region</th>
      <th>Postal code</th>
      <th>Price</th>
      <th>Bedrooms</th>
      <th>Bathrooms</th>
      <th>Livable area square feet</th>
      <th>Land size acres</th>
      <th>Title</th>
      <th>Description</th>
      <th>Property type</th>
      <th>Features</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.address %></td>
        <td><%= property.city %></td>
        <td><%= property.region %></td>
        <td><%= property.postal_code %></td>
        <td><%= property.price %></td>
        <td><%= property.bedrooms %></td>
        <td><%= property.bathrooms %></td>
        <td><%= property.livable_area_square_feet %></td>
        <td><%= property.land_size_acres %></td>
        <td><%= property.title %></td>
        <td><%= property.description %></td>
        <td><%= property.property_type %></td>
        <td><%= property.features %></td>
        <td><%= property.latitude %></td>
        <td><%= property.longitude %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

