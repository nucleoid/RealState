<h1>Reports</h1>

<div class="pull-right"><%= link_to 'New Report', new_report_path %></div><br>

<% if @reports.empty? %>
  <h4>No Reports Available</h4>
<% else %>
  <div class="row">
    <div class="col-sm-3 text-primary">Name</div>
    <div class="col-sm-7 text-primary">Sql query</div>
    <div class="col-sm-2 text-primary"> </div>
  </div>
<% end %>

<% @reports.each do |report| %>
  <div class="row row-striped">
    <div class="col-sm-3"><%= report.name %></div>
    <div class="col-sm-7"><%= report.sql_query %></div>
    <div class="col-sm-2"><%= link_to 'Show', report %> | <%= link_to 'Edit', edit_report_path(report) %></div>
  </div>
<% end %>
