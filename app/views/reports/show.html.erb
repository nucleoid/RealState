<p>
  <strong>Name:</strong>
  <%= @report.name %>
</p>

<p>
  <strong>Sql query:</strong>
  <%= @report.sql_query %>
</p>

<p>
  <strong>Report:</strong>
  <table>
    <thead>
    <tr>
      <% @report.columns.each do |col| %>
        <th><%= col.titleize %></th>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <% @report.values.each do |row| %>
        <tr>
        <% row.each do |v| %>
          <td><%= v %></td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

</p>

<%= link_to 'Export to PDF', export_report_path(@report) %> |
<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>
